<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:paddingBottom="2dp"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/tvNo"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vPembatas"
        android:layout_marginBottom="12dp"
        android:text="1"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNo"
        android:text="Ditandai Selesai Pada : "
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="start"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTitle"
        android:text="12 September 2025 - 12:00 WITA"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="start"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <View
        android:id="@+id/vPembatas"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="@color/abuabu_muda"
        app:layout_constraintTop_toBottomOf="@+id/tvTanggal"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
